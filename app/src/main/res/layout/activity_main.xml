<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sardegnaisoladicavalli.example.justjava.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/paddingDp"
            android:layout_marginRight="@dimen/paddingDp"
            android:layout_marginTop="@dimen/paddingDp"
            android:hint="Name"/>

    <TextView
        android:id="@+id/toppings_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/paddingDp"
        android:layout_marginLeft="@dimen/paddingDp"
        android:layout_marginRight="@dimen/paddingDp"
        android:layout_marginTop="@dimen/paddingDp"
        android:text="@string/toppings_label"
        android:textAllCaps="true"/>

    <CheckBox
        android:id="@+id/topping_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/paddingDp"
        android:layout_marginRight="@dimen/paddingDp"
        android:paddingLeft="@dimen/checkboxPadding"
        android:text="@string/topping_1"/>

        <CheckBox
            android:id="@+id/topping_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddingDp"
            android:layout_marginRight="@dimen/paddingDp"
            android:paddingLeft="@dimen/checkboxPadding"
            android:text="@string/topping_2"/>

    <TextView
        android:id="@+id/quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/paddingDp"
        android:layout_marginLeft="@dimen/paddingDp"
        android:layout_marginRight="@dimen/paddingDp"
        android:layout_marginTop="@dimen/paddingDp"
        android:text="@string/quantity_label"
        android:textAllCaps="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/decrement_button"
            android:layout_width="@dimen/quantityPicker"
            android:layout_height="@dimen/quantityPicker"
            android:layout_marginLeft="@dimen/halfPaddingDp"
            android:layout_marginRight="@dimen/halfPaddingDp"
            android:onClick="decrement"
            android:text="@string/decrement_button"
            android:textAllCaps="true"
            android:background="#FFC107"/>

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quantity_text_view"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/increment_button"
            android:layout_width="@dimen/quantityPicker"
            android:layout_height="@dimen/quantityPicker"
            android:layout_marginBottom="@dimen/paddingDp"
            android:layout_marginLeft="@dimen/halfPaddingDp"
            android:layout_marginRight="@dimen/halfPaddingDp"
            android:onClick="increment"
            android:text="@string/increment_button"
            android:textAllCaps="true"
            android:background="#FFC107"/>

    </LinearLayout>

    <TextView
        android:id="@+id/price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/paddingDp"
        android:layout_marginLeft="@dimen/paddingDp"
        android:layout_marginRight="@dimen/paddingDp"
        android:text="@string/price_label"
        android:textAllCaps="true"
        android:textSize="@dimen/fontSize"/>

    <TextView
        android:id="@+id/order_summary_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/paddingDp"
        android:layout_marginRight="@dimen/paddingDp"
        android:textAllCaps="false"
        android:textSize="@dimen/fontSize" />

    <Button
        android:id="@+id/order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/paddingDp"
        android:layout_marginLeft="@dimen/paddingDp"
        android:layout_marginRight="@dimen/paddingDp"
        android:layout_marginTop="@dimen/paddingDp"
        android:onClick="submitOrder"
        android:text="@string/order_button"
        android:textAllCaps="true"
        android:background="#FFC107"/>

        <Button
            android:id="@+id/send_email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/paddingDp"
            android:layout_marginLeft="@dimen/paddingDp"
            android:layout_marginRight="@dimen/paddingDp"
            android:layout_marginTop="@dimen/paddingDp"
            android:padding="@dimen/paddingDp"
            android:onClick="composeEmail"
            android:text="@string/send_email_button"
            android:textAllCaps="true"
            android:background="#FFC107"/>

    </LinearLayout>


</ScrollView>
